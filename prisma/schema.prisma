generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Book {
  id           Int       @id @default(autoincrement())
  title        String
  releaseDate  DateTime?
  cover        String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  authorId     Int
  publisherId  Int
  seriesId     Int?
  volume       Int?
  isbn         String?   @unique
  bookTypeId   Int
  readStatusId Int

  publisher Publisher @relation(fields: [publisherId], references: [id])
  series    Series?   @relation(fields: [seriesId], references: [id])
  author     Author     @relation(fields: [authorId], references: [id])
  bookType   BookType   @relation(fields: [bookTypeId], references: [id])
  readStatus ReadStatus @relation(fields: [readStatusId], references: [id])
}

model Author {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}

model Publisher {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}

model Series {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}

model BookType {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}

model ReadStatus {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}
