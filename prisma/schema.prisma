generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Book {
  id           Int        @id @default(autoincrement())
  title        String
  authorId     Int
  author       Author     @relation(fields: [authorId], references: [id])
  publisherId  Int
  publisher    Publisher  @relation(fields: [publisherId], references: [id])
  seriesId     Int?
  series       Series?    @relation(fields: [seriesId], references: [id])
  volume       Int?
  isbn         String?    @unique
  bookTypeId   Int
  bookType     BookType   @relation(fields: [bookTypeId], references: [id])
  readStatusId Int
  readStatus   ReadStatus @relation(fields: [readStatusId], references: [id])
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Author {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}

model Publisher {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}

model Series {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}

model BookType {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}

model ReadStatus {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}
